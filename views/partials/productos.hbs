<h3 class='text-start mt-5 mb-5 fw-bolder text-primary'>Listado de productos</h3>

{{#if productos}}
  <div class='table-responsive'>
    <table class='table table-dark table-hover container'>
      <thead>
        <tr>
          <th>ID</th>
          <th>Producto</th>
          <th>Precio</th>
          <th>Imagen</th>
        </tr>
      </thead>
      <tbody id="innerBody">
        {{#each productos}}
          <tr>
            <th> {{this.id}} </th>
            <th> {{this.title}} </th>
            <th> {{this.price}} </th>
            <th><img width='40' height='40' src={{this.thumbnail}} /></th>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <a href='/' class='btn btn-info mt-3 mb-5'> Volver al Formulario </a>
  </div>
{{else}}
  <h3 class='alert alert-danger'>No se encontraron productos</h3>
  <a href='/' class='btn btn-info mt-3 mb-5'> Volver al Formulario </a>
{{/if}}